{
	"index": {
		"number_of_shards": "1",
		"number_of_replicas": "0",
		"analysis": {
			"analyzer": {
				"my_analyzer": {
					"type": "custom",
					"tokenizer": "whitespace",
					"filter" : ["standard", "asciifolding", "lowercase", "elision", "my_stop", "my_snow"]
				}
			},
			"filter" : {
			    "my_stop": {
                    "type":       "stop",
                    "stopwords":  "_french_"
                },
                "elision" : {
                "type" : "elision",
                "articles" : ["l", "m", "t", "qu", "n", "s", "j","(",")"]
                },
                "my_snow" : {
                    "type" : "snowball",
                    "language" : "french"
                }
            }
		}
	}
} 